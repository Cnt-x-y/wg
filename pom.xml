        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.1.5.RELEASE</version>
        <relativePath/>
    </parent>
    <groupId>com.wugou</groupId>
    <artifactId>wg</artifactId>
    <version>1.0.0</version>
    <name>wg</name>
    <description>五狗项目</description>
    <packaging>pom</packaging>

